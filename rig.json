{
  "publisher": "test",
  "name": "rig",
  "version": "0.0.1",
  "description": "Calls the component",
  "rigging": {
    "ge": {
      "component": "slipwayhq.givenergy_cloud.0.0.1",
      "allow": [
        { "permission": "http", "prefix":"https://api.givenergy.cloud/" },
        { "permission": "env", "prefix":"GIVENERGY_" }
      ],
      "input": {}
    },
    "echarts": {
      "component": "slipwayhq.echarts.0.0.1",
      "allow": [
        { "permission": "font" },
        { "permission": "registry_component", "publisher": "slipwayhq", "name": "svg" },
        { "permission": "registry_component", "publisher": "slipwayhq", "name": "echarts_svg" }
      ],
      "input": {
        "width": 800,
        "height": 600,
        "chart": "$$.ge.chart",
        "theme": {
          "color": ["#000"],
          "backgroundColor": "#FFF",
          "textStyle": { "color": "#000" },
          "title": {
            "textStyle": { "color": "#000" },
            "subtextStyle": { "color": "#000" }
          },
          "axisLine": {
            "lineStyle": { "color": "#000" }
          },
          "axisTick": {
            "lineStyle": { "color": "#000" }
          },
          "axisLabel": { "color": "#000" },
          "splitLine": {
            "lineStyle": { "color": "#000" }
          },
          "splitArea": {
            "areaStyle": { "color": ["#FFF", "#FFF"] }
          },
          "toolbox": {
            "iconStyle": { "borderColor": "#000" }
          },
          "legend": {
            "textStyle": { "color": "#000" }
          }
        }
      }
    }
  }
}  
